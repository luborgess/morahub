# EditorConfig: https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{js,jsx,ts,tsx}]
quote_type = single
max_line_length = 100

[*.{css,scss}]
quote_type = double

[*.{json,yml,yaml}]
indent_size = 2
